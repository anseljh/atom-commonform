{
  "scopeName": "source.commonform",
  "fileTypes": [
    "commonform"
  ],
  "name": "Common Form Markup",
  "patterns": [
    {
      "comment": "Comment",
      "name": "comment.line",
      "match": "^\\s*#.+"
    },
    {
      "comment": "summary",
      "name": "entity.name",
      "start": "^",
      "end": "\\(\\\\|\\!\\!\\)"
    },
    {
      "comment": "Use",
      "name": "string.unquoted",
      "start": "<",
      "end": ">"
    },
    {
      "comment": "Field",
      "name": "variable",
      "start": "\\[",
      "end": "\\]"
    },
    {
      "comment": "Reference",
      "name": "keyword",
      "start": "{",
      "end": "}"
    },
    {
      "comment": "Definition",
      "name": "constant",
      "start": "\"\"",
      "end": "\"\""
    },
    {
      "comment": "Conspicuous marker",
      "name": "storage.modifier",
      "match": "!!!"
    },
    {
      "name": "invalid.illegal",
      "match": "[^\\x00-\\x7F]"
    }
  ]
}
